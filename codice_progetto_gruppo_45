.db 249, 9, 9, 9 
.db 250, 9, 9, 9 
.db 251, 9, 9, 9 
.db 252, 9, 9, 9 
.db 253, 9, 9, 9 
.db 254, 9, 9, 9 
.db 255, 9, 9, 9 

.CSEG
.ORG 0x0000

; Inizio dei vettori di interrupt
jmp RESET
jmp EXT_INT0
jmp EXT_INT1
jmp PCINTR0
jmp PCINTR1
jmp PCINTR2
jmp WDT
jmp TIM2_COMPA
jmp TIM2_COMPB
jmp TIM2_OVF
jmp TIM1_CAPT
jmp TIM1_COMPA
jmp TIM1_COMPB
jmp TIM1_OVF
jmp TIM0_COMPA
jmp TIM0_COMPB
jmp TIM0_OVF
jmp SPI_STC
jmp USART_RXC
jmp USART_UDRE
jmp USART_TXC
jmp ADC_conv
jmp EE_RDY
jmp ANA_COMP
jmp TWI
jmp SPM_RDY

; Fine dei vettori di interrupt

;---------------------------------------------------------------------------
RESET:
	; inizializzazione dello stack pointer
    ldi mp, HIGH(RAMEND)	
    out SPH, mp
    ldi mp, LOW(RAMEND)
    out SPL, mp

    ; inizializzazione porte display PD0-PD3 (ABCD), PD4-5-6 (LE)
    ldi mp, 0b0111_1111
    out DDRD, mp
    ldi mp, 0b0111_0000
    out PORTD, mp

    ; PB3 ingresso (pulsante), PB4 (punto decimale) e PB5 (led arduino) uscita
    in mp, DDRB
    andi mp, 0b1111_0111
    out DDRB, mp
    in mp, DDRB
    ori mp, 0b0011_0000
    out DDRB, mp

    ; Pull-up PB0-PB1-PB2-PB3
    ldi mp, 0b1100_1111
    out PORTB, mp

    ; Inizializza stato pulsante e scala
    ldi state_button, 0b0000_0000
    ldi flag_scala, 0b0000_0001

    ; Impostazioni clock e Timer0
    ldi mp, 0b1000_0000
    sts CLKPR, mp
    ldi mp, 0b0000_0101
    sts CLKPR, mp

    ldi mp, 0b0000_0101
    out TCCR0B, mp
    ldi mp, 236
    out TCNT0, mp
    ldi mp, 0b0000_0001
    sts TIMSK0, mp

    ; inizializzazione temp e flag_val
    ldi temp, T_chek_temp
    ldi flag_val, 0b0000_0000


    ; Abilitazione ADC al campionamento + prescaler=4
    ldi mp, 0b1000_0010
    sts ADCSRA, mp

    ; Programmazione ADC: 1,1 V, left adjusted, PC0
    ldi mp,0b0110_0001
    sts ADMUX,mp
    nop
    nop
    nop
    nop
   

    sei

;---------------------------------------------------------------------------
;							Ciclo principale
;---------------------------------------------------------------------------
main_loop:

	; lettura stato del pulsante

    in stato_pinB, PINB
    mov mp, stato_pinB
    andi mp, 0b00001000

    cp mp, state_button		; confronto con lo stato precedente del pulsante
    breq check				; se uguali non aggiorna nessun flag e prosegue con il main_loop

    ; routine di debounce in caso di variazione dello stato del pulsante
    ldi mp1,20
debounce_delay:
    dec mp1
    tst mp1
    brne debounce_delay

    in mp1, PINB			; verifica dell'effettiva variazione di stato del pulsante
    andi mp1, 0b00001000
    cp mp1, mp
    brne check				; se non verificato ignora le successive istruzioni di update e prosegue con il main_loop

    tst mp					; se sul fronte di discesa dell'impulso fornito dal pulsante, aggiorna il flag della scala
    breq update_flag_scala
	mov state_button, mp
    rjmp check

update_flag_scala:			; routine di update del flag della scala 
    mov state_button, mp1
    ldi mp1, 0b0000_0001
    eor flag_scala, mp1

check:						; continuo del main_loop con la verifica sulla variabile del TIM_OVF0

    cpi temp,0
    brne end_loop_vicino
    ldi temp,50
    rjmp continuo_val

end_loop_vicino:			; istruzione di comodo per saltare al main_loop
    rjmp main_loop

continuo_val:				; verifico se è ora di misurare la V di alimentazione
    cpi flag_val,1
    breq measure_Val
    ldi flag_val,1
    rjmp intermedio

;---------------------------------------------------------------------------
;							Misura V di alimentazione
;---------------------------------------------------------------------------
measure_Val:			; routine di misura dell'alimentazione
    ldi flag_val,0

    ; Impostaioni ADC: Vcc, right adjusted, canale A1
    ldi mp, 0b1110_0001 
    sts ADMUX, mp
	
	call dummy_read		; routine di lettura "a vuoto" da scartare per stabilizzare il nuovo riferimento dell'ADC


    ; Inizio conversione 
    lds mp, ADCSRA
    ldi mp1, 0b01000000
    or mp, mp1
    sts ADCSRA, mp

wait_adc:				; attesa della fine della conversione
    lds mp, ADCSRA
    ldi mp1, 0b01000000
    and mp, mp1
    brne wait_adc

    ; Lettura ADCH e confronto soglia
    lds mp, ADCH
    cpi mp, soglia_Val
    brsh adc_greater_than_ref
	; se minore - LED ON 
    sbi PORTB, PB5
	rjmp intermedio

adc_greater_than_ref:		; maggiore della soglia - LED OFF
    cbi PORTB, PB5


intermedio:

scelta_scala:				; routine di scelta della scala in base al flag
    tst flag_scala
    breq usa_fahrenheit
    rjmp usa_celsius

usa_fahrenheit:
	cbi PORTB, PB4			; spegne il punto decimale
    mov state_button, mp
    ldi ZH, high(2 * tabella_fahrenheit)
    ldi ZL, low(2 * tabella_fahrenheit)
    rjmp usa_tabella

usa_celsius:
	sbi PORTB, PB4			; accende il punto decimale
    mov state_button, mp
    ldi ZH, high(2 * tabella_celsius)
    ldi ZL, low(2 * tabella_celsius)

usa_tabella:
    push ZH
    push ZL

; impostazione ADC con riferimento 1.1 V, right adjusted, A0
    ldi mp, 0b1100_0000  
    sts ADMUX, mp
    rcall dummy_read     
    nop
    nop
    nop
    nop
    nop
    nop
    nop
    nop
    nop
    nop

    call measure			; richiamo la misura di temperatura

end_loop:
    rjmp main_loop

;---------------------------------------------------------------------------
;						MISURA DI TEMPERATURA
;---------------------------------------------------------------------------
measure:
    pop mp
    pop mp1
    pop ZL
    pop ZH
    push mp1
    push mp
	nop

    lds mp, ADCSRA
    ldi mp1,0b0100_0000
    or mp,mp1
    sts ADCSRA,mp

controllo_conversione2:
    lds mp,ADCSRA
    ldi mp1,0b01000000
    and mp,mp1
    brne controllo_conversione2

	lds R26, ADCL
	lds R27, ADCH


	; Check sull'indice

	; se l'ADC rileva un livello di quantizzazione minore di 255 -> saturazione basso

	ldi mp, low(255)
	ldi mp1, high(255)
	
	cp r26, mp
	cpc r27, mp1
	brcs saturazione_basso


	; controllo se la saturazione è in alto
	
	ldi mp, low(435)
	ldi mp1, high(435)
	
	cp r26 ,mp
	cpc r27, mp1

	brcc saturazione_alto
	
	jmp misura_nel_range
 	

saturazione_alto:			; Per visualizzare sul display 999
	; accendo i LE e carico 1001 su ognuno (centinata, decine, unità)
	ldi mp, 0b0001_1001
	out PORTD, mp
	nop
	nop
	nop
	ldi mp, 0b0010_1001
	out PORTD, mp
	nop
	nop
	nop
	ldi mp, 0b0100_1001
	out PORTD, mp

	jmp fine_sub

saturazione_basso:			; Per visualizzare sul display 000
	; accendo i LE e carico 0000 su ognuno
	ldi mp, 0b0001_0000
	out PORTD, mp
	nop
	nop
	nop
	ldi mp, 0b0010_0000
	out PORTD, mp
	nop
	nop
	nop
	ldi mp, 0b0100_0000
	out PORTD, mp

	jmp fine_sub

	;
misura_nel_range:				; routine di misura se non c'è saturazione
    ; VADC - 255 - sottrazione per poter scalare la tabella e utilizzare un solo registro per l'indice

	ldi mp, low(255)
	ldi mp1, high(255)
	sub R26, mp
	sub R27, mp1

    ldi mp1,4
    mul R26,mp1
    add ZL,R0
    adc ZH,R1
   
	nop

	; Dopo aver trovato l'indice, mostro il risultato sui display

    lpm mp,Z+
    lpm mp,Z+
    ori mp,0b0111_0000
    out PORTD,mp
    andi mp,0b0110_1111
    out PORTD,mp
    nop
    nop
    nop
    nop
    nop
    ori mp,0b0111_0000
    out PORTD,mp

    lpm mp,Z+
    ori mp,0b0111_0000
    out PORTD,mp
    andi mp,0b0101_1111
    out PORTD,mp
    nop
    nop
    nop
    nop
    nop
    ori mp,0b0111_0000
    out PORTD,mp

    lpm mp,Z+
    ori mp,0b0111_0000
    out PORTD,mp
    andi mp,0b0011_1111
    out PORTD,mp
    nop
    nop
    nop
    nop
    nop
    ori mp,0b0111_0000
    out PORTD,mp

fine_sub:
    ret



;---------------------------------------------------------------------------
; DUMMY_READ 
;---------------------------------------------------------------------------
dummy_read:
    ; Avvia una conversione fittizia e scarta il risultato
    lds mp, ADCSRA
    ori mp, 0b01000000   
    sts ADCSRA, mp
	
    ; scarta i registri
    lds mp, ADCL
    lds mp, ADCH
    ret


;---------------------------------------------------------------------------
; INTERRUPT HANDLERS
;---------------------------------------------------------------------------
TIM0_OVF:
    push mp
    in mp, SREG
    push mp

    ldi mp,236
    out TCNT0, mp
    dec temp

    pop mp
    out SREG, mp
    pop mp
    reti

; Altri interrupt non usati
EXT_INT0:   reti
EXT_INT1:   reti
PCINTR0:    reti
PCINTR1:    reti
PCINTR2:    reti
WDT:        reti
TIM2_COMPA: reti
TIM2_COMPB: reti
TIM2_OVF:   reti
TIM1_CAPT:  reti
TIM1_COMPA: reti
TIM1_COMPB: reti
TIM1_OVF:   reti
TIM0_COMPA: reti
TIM0_COMPB: reti
SPI_STC:    reti
USART_RXC:  reti
USART_UDRE: reti
USART_TXC:  reti
ADC_conv:   reti
EE_RDY:     reti
ANA_COMP:   reti
TWI:        reti
SPM_RDY:    reti
